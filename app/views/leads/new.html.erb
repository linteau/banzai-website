<!-- Jumbo header at the top of the page -->
<header>
  <div class="jumbotron">
    <div class="container">
      <div class="row"><h1>Outbound Sales as a Service</h1></div>
      <div class="row">
        <p class="col-md-8" style="padding:0;">Banzai is scalable, on-demand outbound sales infrastructure,
        so you can launch and manage high-tough campaigns in minutes, not weeks.</p>
      </div>
      <div class="row">
        <p><a class="btn btn-default btn-lg" href="/features" role="button">Learn more</a></p>
      </div>
    </div>
  </div>
</header>
<!-- End the Jumbo container -->

<!-- Start the bottom widgets -->
